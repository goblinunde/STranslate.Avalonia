<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:STranslate.Avalonia.Controls">
    
    <!-- ðŸ’¡ IconButtonæ ·å¼å®šä¹‰ - ä»ŽWPF ResourceDictionaryè¿ç§»åˆ°Avalonia Styles -->
    <Style Selector="controls|IconButton">
        <Setter Property="Padding" Value="5,3"/>
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="IconSize" Value="14"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <!-- ðŸ’¡ æ™®é€šButtonæ¨¡å¼ -->
                    <Button x:Name="PART_Button"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Command="{TemplateBinding Command}"
                            CommandParameter="{TemplateBinding CommandParameter}"
                            ToolTip.Tip="{TemplateBinding ToolTip.Tip}"
                            IsVisible="True">
                        <!-- ðŸ’¡ Avalonia: ä½¿ç”¨PathIconæˆ–TextBlockæ˜¾ç¤ºå›¾æ ‡ -->
                        <TextBlock Text="{TemplateBinding Icon}"
                                   FontSize="{TemplateBinding IconSize}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>

                    <!-- ðŸ’¡ ToggleButtonæ¨¡å¼ -->
                    <ToggleButton x:Name="PART_ToggleButton"
                                  Padding="{TemplateBinding Padding}"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="{TemplateBinding CornerRadius}"
                                  IsChecked="{TemplateBinding IsOn, Mode=TwoWay}"
                                  ToolTip.Tip="{TemplateBinding ToolTip.Tip}"
                                  IsVisible="False">
                        <TextBlock Text="{TemplateBinding Icon}"
                                   FontSize="{TemplateBinding IconSize}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </ToggleButton>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- ðŸ’¡ æ ¹æ®Typeå±žæ€§åˆ‡æ¢å¯è§æ€§ -->
    <Style Selector="controls|IconButton[Type=Toggle] /template/ Button#PART_Button">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    
    <Style Selector="controls|IconButton[Type=Toggle] /template/ ToggleButton#PART_ToggleButton">
        <Setter Property="IsVisible" Value="True"/>
    </Style>
</Styles>
